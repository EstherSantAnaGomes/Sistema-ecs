<div class="d-flex align-items-center justify-content-center">
    <h1>Estágio Curricular Supervisionado</h1>
</div>
<div class="d-flex align-items-center justify-content-center">
    <%= image_tag("DirlicOficial.png", size: "220x220", :alt => "logo estágio curricular supervisonado") -%>   
</div>
<br>


<div class="container">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
   
    <br><br><br><br><br>


  <div class="card-header"> 

<div class="d-flex align-items-center justify-content-center">
    <div class="formulario_login col-md-5 col-offset-2 ">
      <div class="imagem_topo">
        <%= image_tag 'user.png', alt: 'user' %>
      </div>
      <h4>Esqueceu sua senha?</h4>
      
      
      <div class="form-group row">
        <div class="input-group mx-auto">
          <div class="input-group-prepend">
            <span class="input-group-text"><%= image_tag 'user_login.png', alt: 'email' %></span>
          </div>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'E-mail', class: "form-control" %>
        </div>
      </div>  
     
      <br><br>

<div class="d-flex align-items-center justify-content-center">

      <div class="botoes_inferior">
        <%= f.submit "Reativar senha", class: 'btn btn-danger btn-block' %>
        <%= link_to "Voltar", welcome_path, :class => "btn btn-primary btn-block" %>
      </div>

     </div>
  <% end %>

</div>
</div>  
</div>  
</div>
</div>  