<div class="d-flex align-items-center justify-content-center">
    <h1>Estágio Curricular Supervisionado</h1>
</div>
<div class="d-flex align-items-center justify-content-center">
    <%= image_tag("DirlicOficial.png", size: "220x220", :alt => "logo estágio curricular supervisonado") -%>   
</div>
<br>

<div class="card">

  <div class="card-header"><h1>Registre-se!</h1></div>
  <br>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>


  <div class="form-group row">
        <label class="col-sm-2 col-form-label">Nome civil*</label>
        <div class="col-sm-4">
        <%= f.text_field :nome_civil, autofocus: true, autocomplete: "off" %>
  </div>
  <br>

        <label class="col-sm-2 col-form-label">Nome social*</label>
        <div class="col-sm-4">
        <%= f.text_field :nome_social, autofocus: true, required: true, autocomplete: "off" %>
  </div>
  </div>

  <div class="form-group row">
        <label class="col-sm-2 col-form-label">Email*</label>
        <div class="col-sm-4">
    <%= f.email_field :email, autofocus: true, required: true, autocomplete: "email" %>
  </div>
  <br>

  <label class="col-sm-2 col-form-label">Endereço*</label>
        <div class="col-sm-4">
    <%= f.text_field :endereco, autofocus: true, required: true, autocomplete: "off" %>
  </div>
  </div>

  <div class="form-group row">
        <label class="col-sm-2 col-form-label">Complemento*</label>
        <div class="col-sm-4">
    <%= f.text_field :complemento, autofocus: true, required: true, autocomplete: "off" %>
  </div>
  <br>

  <label class="col-sm-2 col-form-label">Número*</label>
        <div class="col-sm-4">
    <%= f.text_field :numero, autofocus: true, required: true, autocomplete: "off" %>
  </div>
  <div>

  <div class="form-group row">
        <label class="col-sm-2 col-form-label">Bairro*</label>
        <div class="col-sm-4">
    <%= f.text_field :bairro, autofocus: true, required: true, autocomplete: "off" %>
  </div>
  <br>

  <label class="col-sm-2 col-form-label">Município*</label>
        <div class="col-sm-4">
    <%= f.text_field :municipio, autofocus: true, required: true, autocomplete: "off" %>
  </div>
  </div>

  <div class="form-group row">
        <label class="col-sm-2 col-form-label">CEP*</label>
        <div class="col-sm-4">
    <%= f.text_field :cep, autofocus: true, required: true, autocomplete: "off" %>
  </div>
  <br>

  <label class="col-sm-2 col-form-label">Matrícula*</label>
        <div class="col-sm-4">
    <%= f.text_field :matricula, autofocus: true, required: true, autocomplete: "off" %>
  </div>
  </div>

  <div class="form-group row">
        <label class="col-sm-2 col-form-label">Licenciatura*</label>
        <div class="col-sm-4">
        <%= f.select :licenciatura, options_for_select(['Ciências da Natureza', 'Educação Física', 'Geografia', 'Letras: Português e Literaturas',
        'Matemática','Teatro', 'Napp/Dirlic'], f.object.licenciatura), :include_blank => "Selecione", required: true, class: "form-control" %>
  </div>
  <br>

  <label class="col-sm-2 col-form-label">Período*</label>
        <div class="col-sm-4">
        <%= f.select :periodo, options_for_select(['1.º','2.º','3.º','4.º','5.º', '6.º', '7.º', '8.º', 'Pedagoga/TAE'], f.object.periodo), include_blank: "Selecione", required: true, class: "form-control" %>
  </div>
  </div>

  <div class="form-group row">
        <label class="col-sm-2 col-form-label">Telefone*</label>
        <div class="col-sm-4">
    <%= f.text_field :telefone, autofocus: true, required: true, autocomplete: "off" %>
  </div>
  <br>

  <label class="col-sm-2 col-form-label">Foto de perfil*</label>
        <div class="col-sm-4">
        <%= f.file_field :avatar %>
        </div>
        </div>


  <div class="form-group row">
        <label class="col-sm-2 col-form-label">Nova Senha*</label>
        <div class="col-sm-4">
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caracteres no mínimo)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>
  <br>

  <label class="col-sm-2 col-form-label">Confirme sua senha*</label>
  <div class="col-sm-4">
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>
  </div>

  <div class="d-flex align-items-center justify-content-center">
<div id="button-submit" class="button-submit">
  <div class="actions">
    <div class="d-flex align-items-center justify-content-center">
              <%= f.submit "Criar conta", class: 'btn btn-success btn-block' %> &nbsp
              <%= link_to "Voltar", welcome_path, :class => "btn btn-primary btn-block" %>
  </div>
<% end %>

